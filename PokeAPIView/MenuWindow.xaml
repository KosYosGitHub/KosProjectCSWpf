<Window x:Class="PokeAPIView.MenuWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:PokeAPIView"
	mc:Ignorable="d"
	Title="PokeAPI Viewer" Height="768" Width="1024"
	WindowStartupLocation="CenterScreen"
	Loaded="Window_Loaded">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="10"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>

		<Grid Grid.Column="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="24"/>
				<RowDefinition Height="10"/>
				<RowDefinition/>
			</Grid.RowDefinitions>

			<Label Grid.Row="0" Content="Game" HorizontalAlignment="Center"/>

			<StackPanel Grid.Row="2">
				<Button Content="Generation" Height="24" Command="{x:Static local:MenuViewModel.GenerationClick}"/>
				<Button Content="Pokedexes" Height="24" Command="{x:Static local:MenuViewModel.PokedexClick}"/>
			</StackPanel>
		</Grid>

		<Grid Grid.Column="2">
			<Grid.RowDefinitions>
				<RowDefinition Height="24"/>
				<RowDefinition Height="10"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			
			<Label Grid.Row="0" Content="Utility" HorizontalAlignment="Center"/>

			<StackPanel Grid.Row="2">
				<Button Content="Language" Height="24" Command="{x:Static local:MenuViewModel.LanguageClick}"/>
			</StackPanel>
		</Grid>
		
	</Grid>
</Window>
